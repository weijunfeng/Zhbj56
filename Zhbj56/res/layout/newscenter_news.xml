<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/newscenter_news_arrow"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/news_cate_arr" />

        <org.itheima.zhbj56.widget.TouchedTabPageIndicator
            android:id="@+id/newscenter_news_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/newscenter_news_arrow" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/newscenter_news_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>