<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp" >

    <ImageView
        android:id="@+id/item_news_iv_icon"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="#000000"
        android:padding="0.2dp"
        android:scaleType="fitXY"
        android:src="@drawable/pic_item_list_default" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_news_iv_icon"
        android:orientation="vertical" >

        <!-- title -->

        <TextView
            android:id="@+id/item_news_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="sadf"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <!-- 时间 -->

        <TextView
            android:id="@+id/item_news_tv_pubdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="sadf"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/icon_news_comment_num" />

</RelativeLayout>